<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center|top"
    android:orientation="vertical">

          <LinearLayout
              android:id="@+id/dataDiri"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:orientation="horizontal"
              android:background="@drawable/wallpaper">

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="10dp">

                  <de.hdodenhof.circleimageview.CircleImageView
                      android:id="@+id/profile_image"
                      android:layout_width="70dp"
                      android:layout_height="70dp"
                      android:src="@drawable/billie"
                      app:civ_border_color="#fff"
                      app:civ_border_width="1dp" />

              </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shabell"
                        android:textSize="25dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram @shabell.hsb"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#fff"
                       android:text="' Just be your self '"/>

               </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="right"
                  android:layout_marginTop="17dp">

                  <Button
                      android:layout_width="50dp"
                      android:layout_height="25dp"
                      android:text="Edit"
                      android:textSize="10dp"
                      android:textColor="@color/colorAccent"
                      android:background="@drawable/button_r"/>

              </LinearLayout>
          </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/radius">

        <TextView
            android:id="@+id/txtfl"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Friends List"
            android:layout_marginHorizontal="125dp"
            android:layout_marginVertical="30dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/radius">

        <TextView
            android:id="@+id/txtcttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginVertical="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="82dp"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/radius">

        <TextView
            android:id="@+id/txtwl"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="Wish List"
            android:layout_marginVertical="30dp"
            />
        
    </LinearLayout>

</LinearLayout>